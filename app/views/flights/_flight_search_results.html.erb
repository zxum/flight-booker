<div class="columns">
  <div class="column">
    <div class="columns">
      <div class="column">
        <%= form_with(url: "/bookings/new", method: "get", local: true) do |f| %>
          <% @matched_flights.each do |flight| %>
          <div class="box">
            <div class="columns">
              <div class="column is-1 radio-btn">
                
                <%= radio_button_tag(:flight_id, flight.id, {checked: true}) %>            
              </div>

              <div class="column">
                <div class="icon-heading">
                  <span class="icon has-text-primary"><i class="fa fa-plane-departure" aria-hidden="true"></i></span>
                  <h2 class="subtitle has-text-primary"> Origin</h2>
                </div>
                </br></br>
                <p class="has-text-primary has-text-weight-bold"><%= flight.from_airport.code %></p>
                <p class="has-text-info"><%= flight.from_airport.location %></p>
              </div>

              <div class="column">
                <div class="icon-heading">
                  <span class="icon has-text-primary"><i class="fa fa-plane-arrival" aria-hidden="true"></i></span>
                  <h2 class="subtitle has-text-primary">Destination</h2>
                </div>
                </br></br>
                <p class="has-text-primary has-text-weight-bold"><%= flight.to_airport.code %></p>
                <p class="has-text-info"><%= flight.to_airport.location %></p>
              </div>

              <div class="column">
                <div class="icon-heading">
                  <span class="icon has-text-primary"><i class="fa fa-calendar" aria-hidden="true"></i></span>
                  <h2 class="subtitle has-text-primary">Date</h2>
                </div>
                </br></br>
                <p class="has-text-primary has-text-weight-semibold "><%= flight.time.strftime("%b %-d, %Y") %></p>
                <p class="has-text-primary"><%= flight.time.strftime("%l:%M %p") %></p>
              </div>

              <div class="column">
                <div class="icon-heading">
                  <span class="icon has-text-primary"><i class="fa fa-clock" aria-hidden="true"></i></span>
                  <h2 class="subtitle has-text-primary">Duration</h2>
                </div>
                </br></br>
                <p class="has-text-primary has-text-weight-semibold"><%= flight.duration.strftime('%kh %Mm') %></p>
              </div>
            </div>
          </div>
          <% end %>
          <%= hidden_field_tag :no_of_passengers, params[:no_of_passengers] %>
          
        </div>
          <%= submit_tag("Submit", class: "button is-primary")%>
      <% end %>
    </div>
  </div>

</div>