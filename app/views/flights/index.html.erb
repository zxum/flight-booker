

<p id="notice"><%= notice %></p>

<section class="section">
  <div class="container">
    <% if @matched_flights.nil? %>
      <div class="columns is-centered">
        <section class="hero is-medium">
          <div class="hero-body">
            <div class="container">
              <h1 class="title is-1 has-text-white">Let's go places!</h1>      
              <h2 class="subtitle is-3 has-text-success">Search for flights below</h2>
            </div>
          </div>
        </section>
      </div>
    <% end %>
    <div class="is-centered flight-form">
     <%= render 'form' %>
    </div>
    <div class="columns is-centered">
      <div class="column is-7">
        <% unless @matched_flights.nil? %>
        <%= render 'flight_search_results'%>
        <% end %>
      </div>
    </div>
  </div>
</section>
